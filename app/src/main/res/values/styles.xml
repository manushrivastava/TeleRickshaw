<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Divider">
    <item name="android:layout_width">1dp</item>
    <item name="android:layout_height">5dp</item>
  
    <item name="android:background">#FFB300</item>
    
</style>

     <style name="HDivider">
    <item name="android:layout_width">5dp</item>
    <item name="android:layout_height">2dp</item>
  
    <item name="android:background">#FFB300</item>
    
</style>

     <style name="Dialogtitle">
         
         <item name="*android:dialogTitleDecorLayout">@layout/popup_ridenow</item>
     </style>
     
     <style name="farechartDivider">
    <item name="android:layout_width">10dp</item>
    <item name="android:layout_height">0.5dp</item>
  
    <item name="android:background">#B9B9B9</item>
    
</style>

     
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
</style>

    
    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

</resources>
