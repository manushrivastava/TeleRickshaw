<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardview">

   
 
    <RelativeLayout 
    android:id="@+id/toplayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#ffffff">
    
  
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/telerickshaw_logo"
        />
    
    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:textColor="#DD9A32"
        android:layout_margin="2dp"
        android:text="Support" />
    
    <ScrollView
        android:id="@+id/scrollviewabout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_above="@+id/button_call"
        android:layout_marginBottom="7dp"
        android:scrollbars="none">
        
          <RelativeLayout
	        android:id="@+id/detailslayout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/quantlayout"
	        android:orientation="horizontal"
	        android:background="#ffffff"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="3dp"
	        >
	     
        <TextView
        android:id="@+id/textviewabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:textSize="@dimen/cartdetailstextsize"
        android:text=""
		 />
        
        <TextView
	        android:id="@+id/helplinetext"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="3dp"
	        android:textColor="#FABB14"
	        android:background="@drawable/filledborder"
	        android:text="HELPLINE NO."
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:layout_below="@+id/textviewabout"
	        android:textSize="@dimen/cartdetailstextsize" />
        
          <TextView
	        android:id="@+id/texthelplinenumber"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="3dp"
	        android:layout_below="@+id/helplinetext"
	        android:textColor="#000000"
	        android:layout_centerHorizontal="true"
	        android:text="09098098098"
	        
	        android:textSize="@dimen/cartdetailstextsize" />
          
          
           <TextView
	        android:id="@+id/mailtext"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="3dp"
	        android:textColor="#FABB14"
	        android:background="@drawable/filledborder"
	        android:text="SHOOT US AT"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:layout_below="@+id/texthelplinenumber"
	        android:textSize="@dimen/cartdetailstextsize" />
        
          <TextView
	        android:id="@+id/mailid"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="3dp"
	        android:layout_below="@+id/mailtext"
	        android:textColor="#000000"
	        android:layout_centerHorizontal="true"
	        android:text="info@TeleRickshaw.com"
	        android:textSize="@dimen/cartdetailstextsize" />
          
          <TextView
	        android:id="@+id/addresstext"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="3dp"
	        android:textColor="#FABB14"
	        android:background="@drawable/filledborder"
	        android:text="REACH US AT"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:layout_below="@+id/mailid"
	        android:textSize="@dimen/cartdetailstextsize" />
          
          <TextView
	        android:id="@+id/addressIndore"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="3dp"
	        android:layout_below="@+id/addresstext"
	        android:textColor="#646464"
	        android:layout_centerHorizontal="true"
	        android:text="Indore Office:"
	        android:textSize="@dimen/cartdetailstextsize" />
          
          <TextView
	        android:id="@+id/address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="3dp"
	        android:layout_below="@+id/addressIndore"
	        android:textColor="#000000"
	        android:layout_centerHorizontal="true"
	        android:text="AB Road, Rajgadh Kothi, Manorama Ganj, Indore, Madhya Pradesh 452001"
	        android:textSize="@dimen/cartdetailstextsize" />
          
          
        
        
        </RelativeLayout>
           
           </ScrollView>
    
    <Button
              android:id="@+id/button_call"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_margin="3dp"
              android:text="CALL NOW" 
              android:layout_centerHorizontal="true"
              android:textColor="#018235"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:background="@drawable/greybutton_properties"/>
     
    
     
    
    </RelativeLayout>
    
     
   
   
    
 
    
</RelativeLayout><!-- From: file:/home/manu/AndroidStudioProjects/TeleRickshaw1/app/src/main/res/layout/activity_support.xml -->