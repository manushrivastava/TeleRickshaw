<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardview">

   
 
    <RelativeLayout 
    android:id="@+id/toplayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#ffffff">
    
  
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/telerickshaw_logo"
        />
    
    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:textColor="#DD9A32"
        android:layout_margin="2dp"
        android:text="Emergency" />
    
    <ScrollView
        android:id="@+id/scrollviewabout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_marginBottom="7dp"
        android:scrollbars="none">
        
          <RelativeLayout
	        android:id="@+id/detailslayout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/quantlayout"
	        android:orientation="horizontal"
	        android:background="#ffffff"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="3dp"
	        >
	     
        <TextView
        android:id="@+id/textviewabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:textSize="@dimen/cartdetailstextsize"
        android:text=""
		 />
        
        <TextView
	        android:id="@+id/helplinetext"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="3dp"
	        android:textColor="#FABB14"
	        android:background="@drawable/filledborder"
	        android:text="HOW IT WORKS."
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:layout_below="@+id/textviewabout"
	        android:textSize="@dimen/cartdetailstextsize" />
        
        <TextView
	        android:id="@+id/emrgencytext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="3dp"
	        android:layout_below="@+id/helplinetext"
	        android:textColor="#646464"
	        android:layout_centerHorizontal="true"
	        android:text="In case of emergency press HELP ME button, our team will instantly reach to your current location"
	        android:textSize="@dimen/cartdetailstextsize" />
        
        <Button
              android:id="@+id/button_call"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_below="@+id/emrgencytext"
              android:layout_marginTop="8dp"
              android:text="HELP ME" 
              android:layout_centerHorizontal="true"
              android:textColor="#018235"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:background="@drawable/greybutton_properties"/>
        
        </RelativeLayout>
           
           </ScrollView>
    
    
     
    
     
    
    </RelativeLayout>
    
     
    
     <ProgressBar
         android:id="@+id/progressBar1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:visibility="invisible"
         android:layout_centerInParent="true" />
   
   
    
 
    
</RelativeLayout><!-- From: file:/home/manu/AndroidStudioProjects/TeleRickshaw1/app/src/main/res/layout/activity_panic.xml -->